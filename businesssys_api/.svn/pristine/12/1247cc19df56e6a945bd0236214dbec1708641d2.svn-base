    public function instructionsSend(){
        $orderSn = input('order_sn');
        $type = input('type');
        if(empty($orderSn) || empty($type)) return $this->buildFailed(ReturnCode::EMPTY_PARAMS, '参数不能为空!');
        try{
            if($type == 1){
                OrderGuarantee::where('order_sn',$orderSn)->update(['instruct_status' => 2]);
