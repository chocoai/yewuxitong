            }elseif ($type == 2){
                OrderGuarantee::where('order_sn',$orderSn)->update(['instruct_status' => 2]);
                $msg = "撤回发送成功";
            }elseif ($type == 3){
                OrderGuarantee::where('order_sn',$orderSn)->update(['is_bank_loan_finish' => 1]);
