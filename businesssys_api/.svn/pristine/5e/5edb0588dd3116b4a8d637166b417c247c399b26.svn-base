<?php
/**
 * 赎楼银行信息
 */

namespace app\admin\validate;

use \think\Validate;

class GuaranteeBank extends Validate
{
    protected $rule = [
        'type' => 'require|in:1,2,3,4',
        'bankaccount' => 'require|length:1,15',
        'accounttype' => 'require|in:1,2,3,4,5,6,7',
        'bankcard' => 'require|length:1,30',
        'openbank' => 'require'
    ];

    protected $message = [
        'type' => '账户类型有误',
        'bankaccount' => '银行户名有误',
        'accounttype' => '还款账户类型有误',
        'bankcard' => '银行卡有误',
        'openbank' => '银行名称有误',
    ];
}
