namespace app\model;

class SystemMenu extends Base
{

    /**
     * 查询菜单列表
     * @param int $system_id
     * @param int $hide
     * @param array $leval
     * @return array
     * @author CGenJ
     */
    public static function getMenuList($system_id = 1, $hide = 1, $level = [1])
    {
        $where = array(
            'system_id' => 1, 'hide' => $hide, 'level' => ['in', $level],
        );
        $list = self::where($where)->field('name,title,icon,component,path,id,fid,level')->order('sort')->select();
        return $list;
    }
}
